mixin section(title, code)
	.section
		h2.section-title= title
		if code
			code.section-code= code
		block

mixin badColumn(title, badge, warning)
	.column.bad
		h3= title + " "
			span.perf-indicator.perf-slow= badge

		.info-card.info-warning
			- const parts = warning.split(/[,;]/).map(s => s.trim()).filter(s => s)
			- const header = parts[0].includes(':') ? parts[0].split(':')[0] + ':' : ''
			- const firstItem = parts[0].includes(':') ? parts[0].split(':').slice(1).join(':').trim() : parts[0]
			if header
				strong= header
			ul.info-list
				li= firstItem
				each part in parts.slice(1)
					li= part

		block

mixin goodColumn(title, badge, note)
	.column.good
		h3= title + " "
			span.perf-indicator.perf-fast= badge

		.info-card.info-note
			- const parts = note.split(/[,;]/).map(s => s.trim()).filter(s => s)
			- const header = parts[0].includes(':') ? parts[0].split(':')[0] + ':' : ''
			- const firstItem = parts[0].includes(':') ? parts[0].split(':').slice(1).join(':').trim() : parts[0]
			if header
				strong= header
			ul.info-list
				li= firstItem
				each part in parts.slice(1)
					li= part

		block

mixin jsCollapsible(id, title, content)
	.js-wrapper
		.js-content(id=id)= content
		button.js-collapsible(onclick=`toggleContent('${id}')`)= title

mixin formGroup(label)
	.form-group
		label= label
		block

mixin consList(title, items)
	.pros-cons
		h4.cons= title
		ul
			each item in items
				li= item

mixin prosList(title, items)
	.pros-cons
		h4.pros= title
		ul
			each item in items
				li= item
